      <th scope="row">@item.IdFactura</th>
      <th scope="row">@item.IdLibro</th>
      <th scope="row">@item.NombreCliente</th>
      <th scope="row">@item.ApellidoCliente</th>
      <th scope="row">@item.TelefonoCliente</th>
      <th scope="row">@item.Precio</th>
      <th scope="row">@item.FechaRenta</th>
      <th scope="row">@item.FechaRetorno</th>

      
        <th><a class = "btn btn-warning" href="/EditarFactura/@item.IdFactura">Editar</a></th>
        <th><a class = "btn btn-danger" href="/EliminarFactura/@item.IdFactura">Eliminar</a></th>
    </tr>
    }
  </tbody>
</table>
