@page "/Modulos_facturas"
@using biblioteca.Models

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Libro</th>
      <th scope="col">Nombre</th>
      <th scope="col">Apellido</th>
      <th scope="col">Telefono</th>
